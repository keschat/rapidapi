    <groupId>com.rapidapi</groupId>
    <artifactId>rapidapi</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.version>1.0.0-SNAPSHOT</project.version>
        <project.groupId>com.rapidapi</project.groupId>
        <project.artifactId>rapidapi</project.artifactId>
        <maven.compiler.release>24</maven.compiler.release>
        <maven.compiler.enablePreview>--enable-preview</maven.compiler.enablePreview>
        <maven.compiler.showWarnings>true</maven.compiler.showWarnings>
        <maven.compiler.failOnError>true</maven.compiler.failOnError>
        <maven.compiler.failOnWarning>true</maven.compiler.failOnWarning>
        <maven.compiler.verbose>true</maven.compiler.verbose>
        <maven.compiler.warnings>all</maven.compiler.warnings>
        <maven.compiler.deprecation>true</maven.compiler.deprecation>
        <maven.compiler.unchecked>false</maven.compiler.unchecked>
        <maven.compiler.lint>all</maven.compiler.lint>
        <maven.compiler.lint.options>-options,-path</maven.compiler.lint.options>
        <maven.compiler.lint.showWarnings>true</maven.compiler.lint.showWarnings>
        <maven.compiler.lint.showDeprecation>true</maven.compiler.lint.showDeprecation>
        <maven.compiler.lint.failOnError>true</maven.compiler.lint.failOnError>
        <maven.compiler.lint.failOnWarning>true</maven.compiler.lint.failOnWarning>
        <maven.compiler.lint.compilerArgument>-Xlint:all</maven.compiler.lint.compilerArgument>
        <maven.compiler.plugin.version>3.14.0</maven.compiler.plugin.version>
        <maven.clean.plugin.version>3.5.0</maven.clean.plugin.version>
        <maven.install.plugin.version>3.1.4</maven.install.plugin.version>
        <maven.deploy.plugin.version>3.1.4</maven.deploy.plugin.version>
        <maven.surefire.plugin.version>3.5.3</maven.surefire.plugin.version>
        <maven.failsafe.plugin.version>3.5.3</maven.failsafe.plugin.version>
        <maven.resources.plugin.version>3.3.1</maven.resources.plugin.version>
        <maven.jar.plugin.version>3.4.2</maven.jar.plugin.version>
        <maven.version>3.9.11</maven.version>
        <jetty.version>12.0.24</jetty.version>
        <jersey.version>3.1.11</jersey.version>
        <hk2.version>3.1.1</hk2.version>
        <java.version>24</java.version>
        <mavenVersion>3.9.11</mavenVersion>
        <weld.version>6.0.3.Final</weld.version>
        <!-- <version.maven-plugin-tools>3.9.0</version.maven-plugin-tools> -->
    </properties>

    <modules>
        <module>core</module>
        <module>rest</module>
    </modules>

    <repositories>
        <repository>
            <id>central</id>
            <name>Maven Central</name>
            <url>https://repo.maven.apache.org/maven2</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

